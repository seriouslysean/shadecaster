<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shadecaster - Shadow Lamp STL Generator</title>
    <meta
      name="description"
      content="Browser-based shadow lamp STL generator - convert images to 3D-printable shadow lamps"
    />
    <style>
      :root {
        color-scheme: light;
      }

      *,
      *::before,
      *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", "Segoe UI", system-ui, -apple-system, sans-serif;
        background: #fff;
        color: #000;
        min-height: 100vh;
      }

      .page {
        width: min(960px, 100%);
        margin: 0 auto;
        padding: 2rem 1.5rem 3rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        min-height: 100vh;
      }

      .page__header {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .page__title {
        font-size: clamp(2rem, 6vw, 3rem);
        letter-spacing: -0.02em;
      }

      .page__subtitle {
        font-size: 1rem;
        line-height: 1.5;
        max-width: 44ch;
      }

      .card {
        border: 1px solid #000;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .upload {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .upload__label {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.85rem 1.25rem;
        border: 1px solid #000;
        font-weight: 600;
        cursor: pointer;
        background: #fff;
        color: #000;
      }

      .upload__label:hover,
      .upload__label:focus-visible {
        background: #000;
        color: #fff;
      }

      .upload__input {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border: 0;
      }

      .controls {
        display: grid;
        gap: 1rem;
      }

      .controls__group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .controls__label {
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }

      .controls__input {
        border: 1px solid #000;
        padding: 0.65rem 0.75rem;
        font-size: 1rem;
        width: 100%;
        background: #fff;
        color: #000;
      }

      .controls__range {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
      }

      .controls__value {
        font-size: 0.85rem;
      }

      .actions {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .button {
        border: 1px solid #000;
        padding: 0.85rem 1.25rem;
        font-size: 1rem;
        font-weight: 600;
        background: #fff;
        color: #000;
        cursor: pointer;
      }

      .button:hover:not(:disabled),
      .button:focus-visible:not(:disabled) {
        background: #000;
        color: #fff;
      }

      .button:disabled {
        opacity: 0.4;
        cursor: not-allowed;
      }

      .status {
        font-size: 0.95rem;
        border-left: 2px solid #000;
        padding-left: 0.75rem;
      }

      .status:empty {
        border-left: 0;
        padding-left: 0;
      }

      .footer {
        font-size: 0.85rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
        text-align: center;
        margin-top: auto;
        padding-top: 1.5rem;
      }

      .footer a {
        color: inherit;
      }

      .hidden {
        display: none;
      }

      :focus-visible {
        outline: 2px solid #000;
        outline-offset: 3px;
      }

      @media (min-width: 1024px) {
        .page {
          padding: 3rem 2rem 4rem;
        }

        .controls {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }

        .actions {
          flex-direction: row;
          justify-content: flex-start;
        }
      }
    </style>
  </head>
  <body>
    <main class="page">
      <header class="page__header">
        <h1 class="page__title">Shadecaster</h1>
        <p class="page__subtitle">Shadow lamp STL generator</p>
      </header>

      <section class="card">
        <div class="upload">
          <label for="image-upload" class="upload__label">Upload image</label>
          <input
            type="file"
            id="image-upload"
            class="upload__input"
            accept="image/png,image/jpeg,image/jpg,image/webp"
          />
        </div>

        <div class="controls">
          <div class="controls__group">
            <label for="dome-diameter" class="controls__label">Dome diameter (mm)</label>
            <input
              type="number"
              id="dome-diameter"
              class="controls__input"
              value="60"
              min="50"
              max="200"
              step="5"
            />
          </div>

          <div class="controls__group">
            <label for="dome-height" class="controls__label">Dome height (mm)</label>
            <input
              type="number"
              id="dome-height"
              class="controls__input"
              value="20"
              min="20"
              max="150"
              step="5"
            />
          </div>

          <div class="controls__group">
            <label for="tea-light-diameter" class="controls__label">Tea light diameter (mm)</label>
            <input
              type="number"
              id="tea-light-diameter"
              class="controls__input"
              value="38"
              min="30"
              max="45"
              step="0.5"
            />
          </div>

          <div class="controls__group">
            <label for="tea-light-depth" class="controls__label">Tea light depth (mm)</label>
            <input
              type="number"
              id="tea-light-depth"
              class="controls__input"
              value="16"
              min="10"
              max="25"
              step="0.5"
            />
          </div>

          <div class="controls__group controls__range">
            <label for="wall-thickness" class="controls__label">Wall thickness (mm)</label>
            <input
              type="number"
              id="wall-thickness"
              class="controls__input"
              value="1.6"
              min="0.5"
              max="5"
              step="0.1"
            />
          </div>

          <div class="controls__group">
            <label for="wall-height" class="controls__label">Wall height (mm)</label>
            <input
              type="number"
              id="wall-height"
              class="controls__input"
              value="25"
              min="10"
              max="120"
              step="2"
            />
          </div>

          <div class="controls__group controls__range">
            <label for="angular-resolution" class="controls__label">Angles</label>
            <input
              type="range"
              id="angular-resolution"
              class="controls__input"
              value="18"
              min="12"
              max="180"
              step="6"
              aria-describedby="angular-value"
            />
            <span class="controls__value" id="angular-value">18 angles</span>
          </div>

          <div class="controls__group controls__range">
            <label for="threshold" class="controls__label">Threshold</label>
            <input
              type="range"
              id="threshold"
              class="controls__input"
              value="128"
              min="0"
              max="255"
              step="1"
              aria-describedby="threshold-value"
            />
            <span class="controls__value" id="threshold-value">128</span>
          </div>

          <div class="controls__group">
            <label for="stl-format" class="controls__label">STL format</label>
            <select id="stl-format" class="controls__input">
              <option value="binary" selected>Binary (smaller)</option>
              <option value="ascii">ASCII (debugging)</option>
            </select>
          </div>
        </div>

        <div class="actions">
          <button id="download-btn" class="button hidden">Download STL</button>
        </div>

        <p id="info-text" class="status" aria-live="polite"></p>
      </section>

      <footer class="footer">
        <p>Print with dark or opaque material for best results.</p>
        <a
          href="https://github.com/seriouslysean/shadecaster"
          target="_blank"
          rel="noreferrer"
          aria-label="View on GitHub (opens in new tab)"
        >
          View on GitHub
        </a>
      </footer>
    </main>

    <script>
      import '../main';
    </script>
  </body>
</html>
